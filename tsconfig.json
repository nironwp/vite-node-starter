{
    "include": ["src/**/*"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "./dist",
        "strict": false,
        "target": "ES6",
        "module": "CommonJS",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "types": ["vitest/globals"]
    },
    "exclude": ["node_modules"]
}
